<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to EffiScheduler"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"/>

    <!-- Set up a 2x2 grid layout for the Eisenhower Matrix -->
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:rowCount="2"
        android:columnCount="2"
        android:layout_marginTop="16dp">

        <!-- First Quadrant -->
        <LinearLayout
            android:id="@+id/urgent_important"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:background="#FFCCBC"
            android:orientation="vertical"
            android:padding="8dp"
            android:layout_row="0"
            android:layout_column="0">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Urgent &amp; Important"
                android:textStyle="bold" />

            <!-- Default placement of Task 1 and Task 2 in this quadrant -->
            <TextView
                android:id="@+id/task1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Task 1"
                android:background="#FFEB3B"
                android:padding="8dp"
                android:textColor="#000000"
                android:layout_marginTop="8dp"/>

            <TextView
                android:id="@+id/task2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Task 2"
                android:background="#8BC34A"
                android:padding="8dp"
                android:textColor="#FFFFFF"
                android:layout_marginTop="8dp"/>
        </LinearLayout>

        <!-- Second Quadrant -->
        <LinearLayout
            android:id="@+id/not_urgent_important"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:background="#C5E1A5"
            android:orientation="vertical"
            android:padding="8dp"
            android:layout_row="0"
            android:layout_column="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Not Urgent &amp; Important"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Third Quadrant -->
        <LinearLayout
            android:id="@+id/urgent_not_important"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:background="#FFAB91"
            android:orientation="vertical"
            android:padding="8dp"
            android:layout_row="1"
            android:layout_column="0">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Urgent &amp; Not Important"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Fourth Quadrant -->
        <LinearLayout
            android:id="@+id/not_urgent_not_important"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:background="#B3E5FC"
            android:orientation="vertical"
            android:padding="8dp"
            android:layout_row="1"
            android:layout_column="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Not Urgent &amp; Not Important"
                android:textStyle="bold" />
        </LinearLayout>

    </GridLayout>
</LinearLayout>
